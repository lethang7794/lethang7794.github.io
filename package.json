{
	"name": "minimalist-portfolio-json",
	"type": "module",
	"version": "0.6.0",
	"scripts": {
		"//ASTRO": "ASTRO",
		"dev": "astro dev",
		"start": "astro dev",
		"build": "astro check && astro build",
		"preview": "astro preview",
		"astro": "astro",
		"//BUILD": "BUILD",
		"gen-markmap": "ts-node ./scripts/cv-to-md.ts",
		"//RELEASE": "RELEASE",
		"release": "pnpm run set-next-version && pnpm run gen-changelog && pnpm run bump-version",
		"get-next-version": "pnpm exec git-cliff --bumped-version",
		"set-next-version": "pnpm version $(pnpm exec git-cliff --bumped-version)",
		"get-current-tag-changelog-diff": "pnpm exec git-cliff --current --strip header",
		"get-latest-tag-changelog-diff": "pnpm exec git-cliff --latest --strip header",
		"gen-changelog": "pnpm exec git-cliff --bump > CHANGELOG.md",
		"bump-version": "NEXT_VERSION=$(pnpm exec git-cliff --bumped-version); git commit --amend -a -m \"chore(release): bump to $NEXT_VERSION [skip ci]\" && git push --follow-tags"
	},
	"dependencies": {
		"@astrojs/check": "0.4.1",
		"@astrojs/partytown": "^2.1.3",
		"@astrojs/tailwind": "^5.1.0",
		"astro": "4.3.2",
		"astro-font-picker": "^0.2.2",
		"astro-icon": "^1.1.5",
		"hotkeypad": "1.0.1",
		"marked": "^15.0.7",
		"markmap-autoloader": "^0.18.11",
		"prettier-plugin-tailwindcss": "^0.6.11",
		"tailwindcss": "^3.4.4",
		"typescript": "5.3.3"
	},
	"devDependencies": {
		"@iconify-json/fa6-solid": "^1.2.3",
		"@iconify-json/line-md": "^1.2.5",
		"@iconify-json/logos": "^1.2.4",
		"@iconify-json/lucide": "^1.2.26",
		"@iconify-json/mdi": "^1.2.3",
		"@iconify-json/simple-icons": "^1.2.24",
		"@iconify-json/skill-icons": "^1.2.0",
		"@playwright/test": "^1.50.1",
		"@tailwindcss/container-queries": "^0.1.1",
		"@types/node": "^22.13.4",
		"git-cliff": "^2.8.0",
		"prettier": "^3.3.2",
		"prettier-plugin-astro": "^0.14.0",
		"ts-node": "^10.9.2",
		"vite": "^6.1.0"
	},
	"packageManager": "pnpm@10.3.0+sha512.ee592eda8815a8a293c206bb0917c4bb0ff274c50def7cbc17be05ec641fc2d1b02490ce660061356bd0d126a4d7eb2ec8830e6959fb8a447571c631d5a2442d"
}
