---
import { Icon } from "astro-icon/components";
import Section from "../Section.astro";
import { skills } from "@cv";
import { SKILLS_ICONS } from "@/constants/skill-icons";
---

<Section className={Astro.props.className} title="Skills">
	<ul
		class="flex list-disc flex-col flex-wrap gap-6 print:mt-4 print:gap-4 [&>li>svg]:size-5 [&>li>svg]:text-skin-hue [&>li]:text-sm print:pb-4"
	>
		{
			skills.map(({ name: skill, keywords }) => {
				const iconName = SKILLS_ICONS[skill]?.iconName;
				const id = encodeURI(skill);

				return (
					<a href={"#" + id}>
						<li class="border-skin-hue/20s bg-skin-button-accent/20s borders border-solids list-item flex-col items-start gap-1 rounded-md px-0 py-0.5 text-base text-skin-muted marker:text-skin-hue/80 print:border-none print:bg-transparent print:p-0 print:text-zinc-800">
							<h4 id={id} class="font-bold">
								{iconName && <Icon name={iconName} class="print:hidden" />}{" "}
								<span>{skill}</span>
							</h4>

							<div class="mt-3 flex flex-wrap gap-2 print:mt-1 print:justify-start">
								{/* {keywords?.map((skill) => {
                let skillName = skill?.replace(/ \(.*\)/, "");
                console.log({ skillName });
								
                const icon = SKILLS_ICONS[skillName];
                const iconName = icon?.iconName || "";
                return (
                  <li class="flex items-center gap-1 rounded-md border border-solid border-skin-hue/30 bg-skin-button-accent/20 bg-transparent px-2 py-0.5 text-xs text-skin-hue/80 print:border-none print:bg-transparent print:p-0 print:text-zinc-800">
                    {iconName && <Icon name={icon?.iconName} />}{" "}
                    <span>{skill}</span>
                  </li>
                );
								})} */}
								{keywords?.map((skill) => {
									let skillName = skill?.replace(/ \(.*\)/, "");
									const icon = SKILLS_ICONS[skillName];
									const iconName = icon?.iconName || "";

									return (
										<div class="flex items-center gap-1 rounded-md border border-solid border-skin-hue/30 bg-skin-button-accent/20 bg-transparent px-2 py-0.5 text-xs text-skin-hue/80 print:border-none print:bg-transparent print:p-0 print:text-skin-muted">
											{iconName && (
												<Icon name={icon?.iconName} class="print:hidden" />
											)}
											<span>{skill}</span>
										</div>
									);
								})}
							</div>
						</li>
					</a>
				);
			})
		}
	</ul>
</Section>
