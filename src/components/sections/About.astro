---
import Markdown from "../Markdown.astro";
import Section from "../Section.astro";

import { basics } from "@cv";
const { summary, summaries: s, summaries_md: s_md } = basics;

const summaries = s_md || s;
---

<Section title="About">
	{
		(
			<ul class="&>li]:ml-4 flex list-disc flex-col gap-2 text-sm text-skin-muted marker:text-skin-hue/80 print:text-skin-muted">
				{summaries ? (
					summaries.map((item) => (
						<li>
							<Markdown of={item} />
						</li>
					))
				) : (
					<li>
						<Markdown of={summary} />
					</li>
				)}
			</ul>
		)
	}
</Section>
