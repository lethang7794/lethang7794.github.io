---
const { className, title } = Astro.props;
---

<section class:list={["flex flex-col gap-4 print:gap-0", className]}>
	{
		title && (
			<h3 class="border-(--color-border) sticky top-0 z-10 mb-2 flex w-full items-center gap-3 border-0 border-b-2 border-solid bg-skin-fill/30 pb-2 pt-2 text-3xl backdrop-blur-lg print:gap-1 print:pb-0 print:text-xl">
				<div class="bg-skin-fill/30 absolute -left-8 top-0 h-full pl-8 backdrop-blur-lg" />
				{title}
			</h3>
		)
	}
	<slot />
</section>
